---
layout: base.njk
title: Blog
permalink: /blog/
---

<div class="row">
    <div class="col c12">
        <h1>{{ title }}</h1>
    </div>
</div>

{%- for post in collections.posts %}
<div class="row">
    <div class="col c12">
        <article>
            <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
            <p class="post-meta">{{ post.date | readableDate }}</p>
            <p>{{ post.data.excerpt or post.content | striptags | truncate(200) }}</p>
            <p><a href="{{ post.url }}">Read more â†’</a></p>
        </article>
    </div>
</div>
{%- endfor %}
